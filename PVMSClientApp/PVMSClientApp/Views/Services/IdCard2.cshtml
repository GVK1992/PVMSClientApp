<body>
    @using (Html.BeginForm())
    {
        <div>
            <table>
                <div class="container">
                    <p><strong>भारत गणराज्य</strong></p>
                    <p><strong>REPUBLIC OF INDIA</strong></p>
                    <div class="passport-data">
                        <div class="passport-photo">
                            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRj6bWgNIwJN0dvsgnYIsGuExDL9FLUDIw0xuORZARex7NgC7SLacOgmEp8vp5ECNQzu2o&usqp=CAU" alt="Passport Photo" />
                        </div>
                        <div class="info">
                            <div class="info-item">
                                <div class="info-block">
                                    <span class="label">Type</span>
                                    <span class="label">Country Code</span>
                                    <span class="label">Passport No</span>
                                </div>
                                <div class="info-block">
                                    <span class="value">P</span>
                                    <span class="value">IND</span>
                                    <span class="value">@Model.passportNo</span>
                                    @Html.TextBoxFor(x => x.passportNo, new { @class = "hidden" })
                                </div>
                            </div>
                            <div class="info-item">
                                <div class="info-block">
                                    <span class="label">Surname:</span>
                                    <span class="label">Given Name(s)</span>
                                </div>
                                <div class="info-block">
                                    <span class="value">@Model.surname</span>
                                    @Html.TextBoxFor(x => x.surname, new { @class = "hidden" })
                                    <span class="value">@Model.givenName</span>
                                    @Html.TextBoxFor(x => x.givenName, new { @class = "hidden" })
                                </div>
                            </div>
                            <div class="info-item">
                                <div class="info-block">
                                    <span class="label">Nationality</span>
                                    <span class="label" style="margin-right:20px">Gender</span>
                                    <span class="label">Date of Birth</span>
                                </div>
                                <div class="info-block">
                                    <span class="value">INDIAN</span>
                                    <span class="value">@Model.gender</span>
                                    @Html.TextBoxFor(x => x.gender, new { @class = "hidden" })
                                    <span class="value">@Model.dob</span>
                                    @Html.TextBoxFor(x => x.dob, new { @class = "hidden" })
                                </div>
                            </div>
                            <div class="info-item">
                                <div class="info-block">
                                    <span class="label">Place of Birth</span>
                                    <span class="label">Place of Issue</span>
                                </div>
                                <div class="info-block">
                                    <span class="value">@Model.placeOfBirth</span>
                                    @Html.TextBoxFor(x => x.placeOfBirth, new { @class = "hidden" })
                                    <span class="value">HYDERABAD</span>
                                </div>
                            </div>
                            <div class="info-item">
                                <div class="info-block">
                                    <span class="label">Date of Issue</span>
                                    <span class="label">Date of Expiry</span>
                                </div>
                                <div class="info-block">
                                    <span class="value" style="margin-right:10px">@Model.doi</span>
                                    @Html.TextBoxFor(x => x.doi, new { @class = "hidden" })


                                    <span class="value">@Model.doe</span>
                                    @Html.TextBoxFor(x => x.doe, new { @class = "hidden" })
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </table>
        </div>
    }



</body>
</html>


