@model PVMSClientApp.Models.DAO.PassportId
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0 auto;
            display: flex;
            align-content: center;
            justify-content: center;
        }

        .container {
            background: url('../../Images/passportBg1.png') no-repeat;
            background-size: cover;
            margin: 0 auto;
            padding: 20px;
            box-shadow: 0px 0px 0px rgba(0, 0, 0, 0.1);
        }

        .passport-photo img {
            height: 130px;
            vertical-align: top;
        }

        .info {
            display: inline-block;
        }

        .passport-photo {
            display: inline;
            margin: 20px;
        }

        /*.passport-data {
            display: flex;
            flex-wrap: wrap;
            align-content: center;
            justify-content: flex-start;
        }*/



        .label {
            font-weight: bolder;
            font-size: small;
            margin: 0px 3px 3px 3px;
        }

        .value {
            display: flex;
            margin: 0px 3px 8px 3px;
            font-family: "Courier New", monospace;
            letter-spacing: 2px;
            padding-bottom: 4px;
            border-bottom: 1px solid #000;
        }

        .info-block {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .info-item {
            display: inline;
        }

        .submit-button {
            padding: 8px 20px;
            background-color: #3c07a6;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 10px;
            text-decoration: none;
            display: inline-block;
            vertical-align: middle;
            font-size: smaller;
            font-weight: normal;
            font-family: "Montserrat", sans-serif;
        }

            .submit-button:hover {
                color: #3c07a6;
                background-color: white;
                border: 2px solid #3c07a6;
            }

        .hidden {
            display: none;
        }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
